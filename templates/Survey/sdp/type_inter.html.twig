{% extends 'base.html.twig' %}

{#{% block title %}Hello AskUserController!{% endblock %}#}

{% block body %}

    <div class="column is-flex is-align-items-center is-justify-content-center is-two-thirds-desktop is-two-fifths-widescreen">
        <div class="box is-flex is-flex-direction-column has-text-centered" style="height: 100%;width: 100%">

            <div class="field">
                <label class="label">Cela concerne t-il une demande ou un incident ?</label>
            </div>

            <div class="is-flex is-justify-content-center is-align-items-end">

                {{ form_start(form) }}

                <div class="control">
                    {% for child in form.choices %}
                        <label class="radio" onclick="checkRadio(this)">
                            <button class="button">
                                {{ child.vars.label }}
                                {{ form_widget(child, {'attr': {'class': 'radio-select is-hidden'} } ) }}
                            </button>

                        </label>
                    {% endfor %}
                </div>

                {{ form_end(form) }}

            </div>

        </div>

    </div>

{% endblock %}


