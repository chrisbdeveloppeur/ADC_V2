{% extends 'base.html.twig' %}

{#{% block title %}Hello AskUserController!{% endblock %}#}

{% block body %}

    <div class="column is-flex is-align-items-center is-justify-content-center  is-two-thirds-desktop is-two-fifths-widescreen">
        <div class="box is-flex is-flex-direction-column has-text-centered" style="height: 100%;width: 100%">
            {{ include('includes/nav_indicator.html.twig') }}
            <div class="column">
                <h1 class="title is-size-1-desktop">Méthode d'intervention</h1>
            </div>

            <label class="label">Veuillez selectionner la méthode d'intervention</label>

            <div class="">

                {{ form_start(form, {'attr': {'class':'column'}}) }}

                <div class="control is-flex-desktop">
                    {% for child in form.method %}

                                {% if child.vars.value == 'AUTRE' %}
                                    <label style="position: relative" class="column help-pointer-hover" data-tooltip="Ex : appel téléphonique, mail, incident résolu sans intervention, faire rebooter un PC ou dans le cadre d'u smartphone, communiquer un code PUK" onclick="checkRadio(this)">
                                        <button class="button is-fullwidth is-dark is-outlined ">
                                            {{ child.vars.label }}
                                            {{ form_widget(child, {'attr': {'class': 'radio-select is-hidden'} } ) }}
                                        </button>
                                    </label>
                                {% elseif child.vars.value == 'GUICHET' %}
                                    <label style="position: relative" class="column help-pointer-hover {% if survey.service == 'HD' %}is-hidden{% endif %}" data-tooltip="Intérvention réalisée au guichet informatique" onclick="checkRadio(this)">
                                        <button class="button is-fullwidth is-dark is-outlined" >
                                            {{ child.vars.label }}
                                            {{ form_widget(child, {'attr': {'class': 'radio-select is-hidden'} } ) }}
                                        </button>
                                    </label>
                                {% elseif child.vars.value == 'PMAD' %}
                                    <label style="position: relative" class="column help-pointer-hover" data-tooltip="Intérvention réalisée à distance (Prise en main à distance)" onclick="checkRadio(this)">
                                        <button class="button is-fullwidth is-dark is-outlined">
                                            {{ child.vars.label }}
                                            {{ form_widget(child, {'attr': {'class': 'radio-select is-hidden'} } ) }}
                                        </button>
                                    </label>
                                {% elseif child.vars.value == 'PLATEAU' %}
                                    <label style="position: relative" class="column help-pointer-hover {% if survey.service == 'HD' %}is-hidden{% endif %}" data-tooltip="Intérvention réalisée au sur place, ex : bureau utilisateur" onclick="checkRadio(this)">
                                        <button class="button is-fullwidth is-dark is-outlined">
                                            {{ child.vars.label }}
                                            {{ form_widget(child, {'attr': {'class': 'radio-select is-hidden'} } ) }}
                                        </button>
                                    </label>
                                {% endif %}

                    {% endfor %}
                </div>

                {{ include('includes/nav/prev_only.html.twig') }}

                {{ form_end(form) }}

            </div>

        </div>

    </div>

{% endblock %}