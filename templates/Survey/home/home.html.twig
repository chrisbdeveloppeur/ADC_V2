{% extends 'base.html.twig' %}

{#{% block title %}Hello AskUserController!{% endblock %}#}

{% block body %}

        <div class="column is-flex is-align-items-center is-justify-content-center  is-two-thirds-desktop is-two-fifths-widescreen">
            <div class="box is-flex is-flex-direction-column has-text-centered" style="height: 100%;width: 100%">
                <div class="column">
                    <h1 class="title is-size-4-mobile">Bienvenue sur l'outil d'assistance à la fermeture de demandes [TASKT] & incidents [INCT]</h1>
                </div>

{#                <h1 class="title is-size-1-desktop">Bienvenue sur l'outil d'assistance à la fermeture de demandes [TASKT] & incidents [INCT]</h1>#}

                <label class="label">Veuillez selectionner votre service</label>

                <div class="">

                    {{ form_start(form, {'attr': {'class':'column'}}) }}

                    <div class="control">
                        {% for child in form.service %}
                            <label class="column" onclick="checkRadio(this)">
                            <button class="button">
                                {{ child.vars.label }}
                                {{ form_widget(child, {'attr': {'class': 'radio-select is-hidden'} } ) }}
                            </button>

                        </label>
                        {% endfor %}
                    </div>

                    {{ form_end(form) }}

                </div>

            </div>

        </div>

{% endblock %}


