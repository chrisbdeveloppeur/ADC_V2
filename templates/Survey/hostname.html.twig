{% extends 'base.html.twig' %}

{% block title %}Hello AskUserController!{% endblock %}

{% block body %}

    <div class="column is-flex is-align-items-center is-justify-content-center is-two-thirds-desktop is-two-fifths-widescreen">
        <div class="box is-flex is-flex-direction-column has-text-centered" style="height: 100%;width: 100%">

            {{ form_start(hostname_field_form, {'attr' : {'class' : 'is-fullheight-percent is-flex is-justify-content-space-between is-flex-direction-column'} }) }}

            <div class="field">
                <label class="label" for="last_name">Veuillez selectionner le Hostname</label>

                <div class="control" style="flex: 1">
                    <div class="select is-info is-fullwidth">
                        {{ form_widget(hostname_field_form.newAsset) }}
                    </div>
                </div>

                <h2 class="subtitle is-3 has-text-centered">Ou</h2>

                <label class="label" for="last_name">Renseigner manuellement le hostname</label>
                <div class="control" style="flex: 1">
                    {{ form_widget(hostname_field_form.customHostname) }}
                </div>

            </div>

            <div class="is-flex is-justify-content-start">

            </div>

            <div class="is-flex is-justify-content-space-between">
                <a href="{{ path('final_string',{from_inct : from_inct, asset_type : asset_type, intervention : intervention, new_user : new_user, hostname : hostname} ) }}" class="button is-warning is-small">
                    <span>
                        Je ne trouve pas le hostname
                    </span>
                    <span class="icon">
                        <i class="fas fa-info-circle"></i>
                    </span>
                </a>

                <button class="button is-info is-small">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>

            {{ form_end(hostname_field_form) }}

        </div>

    </div>

{% endblock %}


