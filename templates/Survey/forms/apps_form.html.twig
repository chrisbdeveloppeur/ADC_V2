{% extends 'base.html.twig' %}

{#{% block title %}Hello AskUserController!{% endblock %}#}

{% block body %}

    <div class="column is-flex is-align-items-center is-justify-content-center is-two-thirds-desktop is-two-fifths-widescreen">
        <div class="box is-flex is-flex-direction-column has-text-centered" style="height: 100%;width: 100%">

            <h1 class="title is-size-1-desktop">Application(S)</h1>

            {{ form_start(app_form, {'attr': {'class': 'ajax-add-asset'}}) }}

            <div class="field has-text-left">
                <label class="checkbox">
                    {{ form_widget(app_form.multiple, {'attr': {'class': 'multiple', 'onclick':'setMultiple(this)'}}) }}
                    Plusieur à ajouter ?
                </label>
            </div>

            <label class="label">Veuillez préciser la méthode d'intervention</label>
            <div class="field">
                <p class="control">
                    <span class="select is-fullwidth">
                        {{ form_widget(app_form.action, {'attr': {'class': 'select has-text-centered js-on-change required-for-add'}}) }}
                    </span>
                </p>
            </div>

            <div class="is-hidden dynamic-field mb-4" id="assets-field">
                <div class="is-flex is-justify-content-space-around">
                    <label class="label">Veuillez indiquer le nom de l'Asset concerné</label>
                </div>
                <div class="field has-addons has-addons-centered">
                    <p class="control is-expanded">
                        {{ form_widget(app_form.asset, {'disabled':'true', 'attr': {'class':'input has-text-centered', 'placeholder': 'Hostname de l\'asset'}}) }}
                    </p>
                </div>
            </div>

            <div class="is-hidden hidden-forced dynamic-field mb-4" id="rsdp-field">
                <div class="field">
                    <p class="control">
                        <label class="checkbox label">
                            Si l'opération a été déroulée sur place, aurait-elle pu être faite à distance ?
                        </label>
                            {% for child in app_form.rsdp %}
                                <label class="radio">
                                    {{ form_widget(child) }}
                                    {{ child.vars.label }}
                                </label>
                            {% endfor %}
                    </p>
                </div>
            </div>

            <div class="is-hidden dynamic-field mb-4" id="tpx-field">
                <label class="label">Durée de l'opération</label>
                <div class="field has-addons is-justify-content-center">
                    <p class="control">
                        {{ form_widget(app_form.tpx, {'attr': {'class':'input has-text-centered tpx', 'placeholder': 'Exemple : 30'}}) }}
                    </p>
                    <p class="control">
                        <a class="button is-static">
                            Min
                        </a>
                    </p>
                </div>
            </div>

            {{ include('includes/nav/nav_for_only_one.html.twig') }}

            <div class="control is-hidden nav-for-multiple">
                <button type="submit" class="button is-info is-small add-btn-form" id="add-btn-form">
                    <span>Ajouter</span>
                    <span class="icon">
                        <i class="fas fa-plus"></i>
                    </span>
                </button>
            </div>

            {{ form_end(app_form) }}

            {{ form_start(form, {'attr' : {'class' : 'is-fullheight-percent is-flex is-justify-content-space-between is-flex-direction-column'} }) }}

            <div class="field">

                {{ form_widget(form.asset, {'attr': {'class': 'is-hidden'}}) }}

            </div>

            <div class="nav-for-multiple is-hidden field">
                {{ include('includes/nav/prev_next.html.twig') }}
            </div>

            {{ include('includes/del_objects_section.html.twig') }}

            {{ form_end(form) }}

        </div>

    </div>




