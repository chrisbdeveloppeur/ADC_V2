{% extends 'base.html.twig' %}

{#{% block title %}Hello AskUserController!{% endblock %}#}

{% block body %}

    <div class="column is-flex is-align-items-center is-justify-content-center is-two-thirds-desktop is-two-fifths-widescreen">
        <div class="box is-flex is-flex-direction-column has-text-centered" style="height: 100%;width: 100%">

            <h1 class="title is-size-1-desktop">Action(s) logiciel(s) / Accès</h1>
{#            <label class="label is-uppercase" for="last_name">Application(S)</label>#}

            {{ form_start(other_app_form, {'attr': {'class': 'ajax-add-asset'}}) }}

            <label class="label">Veuillez selectionner l'objet</label>
            <div class="field">
                <p class="control">
                    <span class="select is-fullwidth">
                        {{ form_widget(other_app_form.action, {'attr': {'class': 'select has-text-centered js-on-change required-for-add'}}) }}
                    </span>
                </p>
            </div>

            <div class="is-hidden dynamic-field mb-4" id="assets-field">
                <div class="is-flex is-justify-content-space-around">
                    <label class="label">Veuillez indiquer le nom de l'Asset concerné</label>
                </div>
                <div class="field has-addons has-addons-centered">
                    <p class="control is-expanded">
                        {{ form_widget(other_app_form.asset, {'disabled':'true', 'attr': {'class':'input has-text-centered', 'placeholder': 'Hostname de l\'asset'}}) }}
                    </p>
                </div>
            </div>

            <div class="is-hidden hidden-forced dynamic-field mb-4" id="rsdp-field">
                <div class="field">
                    <p class="control">
                        <label class="checkbox label">
                            Si l'opération a été déroulée sur place, aurait-elle pu être faite à distance ?
                        </label>
                            {% for child in other_app_form.rsdp %}
                                <label class="radio">
                                    {{ form_widget(child) }}
                                    {{ child.vars.label }}
                                </label>
                            {% endfor %}
                    </p>
                </div>
            </div>

            <div class="is-hidden dynamic-field mb-4" id="tpx-field">
                <label class="label">Durée de l'opération</label>
                <div class="field has-addons is-justify-content-center">
                    <p class="control">
                        {{ form_widget(other_app_form.tpx, {'attr': {'class':'input has-text-centered tpx', 'placeholder': 'Exemple : 30'}}) }}
                    </p>
                    <p class="control">
                        <a class="button is-static">
                            Min
                        </a>
                    </p>
                </div>
            </div>

            <div class="control">
                <button type="submit" class="button is-info is-small" id="asset-btn-form">
                    <span>Ajouter</span>
                    <span class="icon">
                        <i class="fas fa-plus"></i>
                    </span>
                </button>
            </div>

            {{ form_end(other_app_form) }}

            {{ form_start(form, {'attr' : {'class' : 'is-fullheight-percent is-flex is-justify-content-space-between is-flex-direction-column'} }) }}

            <div class="field">

                {{ form_widget(form, {'attr': {'class': 'is-hidden'}}) }}

            </div>

            <div class="field is-grouped is-grouped-multiline" id="asset-tags-grouped">
                {% for app in survey.otherapps %}
                    <div class="control">
                        <div class="tags has-addons">
                            {% if app.action %}
                                <span class="tag is-dark">{{ app.action }}</span>
                            {% endif %}

                            {% if app.asset != 'N/A' %}
                                <span class="tag is-dark">{{ app.asset }}</span>
                            {% endif %}
                            <a class="tag is-delete ajax-remove-asset" href="{{ path('form_app_del', {'position': app.position }) }}" title="Retiré cette action"></a>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {{ include('includes/nav/prev_next.html.twig') }}

            {{ form_end(form) }}

        </div>

    </div>




